<h1>Listing nodes</h1>

<table>
  <tr>
    <th>User</th>
    <th>Node type</th>
    <th>Node text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.user %></td>
    <td><%= node.node_type %></td>
    <td><%= node.node_text %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

